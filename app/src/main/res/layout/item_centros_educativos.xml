<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/picture_card"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    cardView:cardCornerRadius="5dp"
    android:padding="10dp"
    android:elevation="20dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoCentroEducativo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_inmueble"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingBottom="32dp"

            android:background="@color/backgroundtext_card">

            <TextView
                android:id="@+id/nombreCentroEducativo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Nombre del centro educativo"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="25sp"/>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>